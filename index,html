<h1>ü©∫ Virtuelni Doktor</h1>
<p>Pritisni "Slu≈°aj" i reci svoje simptome.</p>
<button id="startBtn">üé§ Slu≈°aj</button>

<div class="output" id="transcript"></div>
<div class="suggestions" id="advice"></div>

<script>
  const startBtn = document.getElementById("startBtn");
  const transcriptDiv = document.getElementById("transcript");
  const adviceDiv = document.getElementById("advice");

  let recognition;
  if ('webkitSpeechRecognition' in window) {
    recognition = new webkitSpeechRecognition();
    recognition.lang = 'sr-SP';
    recognition.continuous = false;
    recognition.interimResults = false;

    recognition.onresult = function(event) {
      const text = event.results[0][0].transcript;
      transcriptDiv.textContent = "Pacijent: " + text;
      giveAdvice(text);
    };

    recognition.onerror = function(event) {
      transcriptDiv.textContent = "Gre≈°ka: " + event.error;
    };
  } else {
    alert("Tvoj browser ne podr≈æava prepoznavanje govora.");
  }

  startBtn.onclick = () => {
    if (recognition) recognition.start();
  };

  function giveAdvice(symptoms) {
    let advice = "Nisam siguran, konsultujte lekara.";
    const s = symptoms.toLowerCase();

    if (s.includes("ka≈°alj") || s.includes("grlo")) {
      advice = "Pijte tople napitke, odmarajte i po potrebi se javite lekaru.";
    } else if (s.includes("glavobolja")) {
      advice = "Pijte dovoljno vode i odmorite. Ako traje du≈æe od 2 dana, javite se lekaru.";
    } else if (s.includes("temperatura")) {
      advice = "Izmerite temperaturu, pijte teƒçnost, i ako prelazi 38¬∞C du≈æe od 24h ‚Äì idite kod lekara.";
    }

    adviceDiv.textContent = "üí° Predlog: " + advice;
  }
</script>

